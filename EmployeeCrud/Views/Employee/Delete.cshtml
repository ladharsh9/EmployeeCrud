@model EmployeeCrud.Models.Employee

<h2 class="text-center text-danger">Delete Employee</h2>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4 border-danger">
                <div class="card-body text-center">
                    <h3 class="text-danger">Are you sure you want to delete this employee?</h3>
                    <hr />

                    <ul class="list-group mb-4">
                        <li class="list-group-item"><strong>EmpId:</strong> @Model.Id</li>
                        <li class="list-group-item"><strong>EmpCode:</strong> @Model.Emp_Code</li>
                        <li class="list-group-item"><strong>Name:</strong> @Model.Emp_Name</li>
                        <li class="list-group-item"><strong>Designation:</strong> @Model.Designation</li>
                        <li class="list-group-item"><strong>Salary:</strong> @Model.Salary</li>
                    </ul>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />

                        <button type="submit" class="btn btn-danger px-4">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
