@model EmployeeCrud.Models.Employee

<h2 class="text-center text-primary">Edit Employee</h2>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Employee ID</label>
                            <input asp-for="Id" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Employee Code</label>
                            <input asp-for="Emp_Code" class="form-control" placeholder="Enter Employee Code" />
                            <span asp-validation-for="Emp_Code" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Employee Name</label>
                            <input asp-for="Emp_Name" class="form-control" placeholder="Enter Employee Name" />
                            <span asp-validation-for="Emp_Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Designation</label>
                            <input asp-for="Designation" class="form-control" placeholder="Enter Designation" />
                            <span asp-validation-for="Designation" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Salary</label>
                            <input asp-for="Salary" class="form-control" placeholder="Enter Salary" />
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success px-4">Save</button>
                            <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
